<div class="container">
  <div class="py-1 mb-2">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Rakesh Rengaraj</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <%= set_nav_links('li', 'nav-link') %>
          <%= check_login_nav('nav-link','') %>
        </ul>
      </div>
    </nav>
  </div>
  <div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
      <h1 class="display-4 font-italic">Dev Thoughts</h1>
      <p class="lead my-3">Still, learning to code</p>
      <% if !current_page?(new_blog_path)%>
        <%= link_to 'Write new Blog', new_blog_path, class: "btn btn-primary" if logged_in?(:site_admin) %>
        <%= link_to 'View all Topics', topics_path, class: "btn btn-primary" if logged_in?(:site_admin) %>
      <% end %>
    </div>
  </div>
</div>
