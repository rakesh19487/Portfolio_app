<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag  set_image_helper(@portfolio.main_image, "main").to_s, :class =>  "img-fluid" %>
      </div>
      <div class="col-md-6">
        <h3><%= @portfolio.title %></h3>
        <h4><%= @portfolio.subtitle %></h4>
        <p><%= @portfolio.body %></p>
        <hr>
        <h3>Technologies</h3>
        <% @portfolio.technologies.each do |technology| %>
          <p><%= technology.name %></p>
        <% end %>
        <%= link_to "Edit ", edit_portfolio_path(@portfolio), class: "btn btn-sm btn-outline-secondary" if logged_in?(:site_admin) %>

          <%= link_to "Delete ", portfolio_path(@portfolio),class: "btn btn-sm btn-outline-secondary", method: :delete, data: {confirm: "Are you sure ?"} if logged_in?(:site_admin) %>
      </div>
    </div>
  </div>
</div>
