<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @portfolio.main_image, :class =>  "img-fluid" if @portfolio.main_image %>
      </div>
      <div class="col-md-6">
        <h3><%= @portfolio.title %></h3>
        <h4><%= @portfolio.subtitle %></h4>
        <p><%= @portfolio.body %></p>
        <hr>
        <h3>Technologies</h3>
        <% @portfolio.technologies.each do |technology| %>
          <p><%= technology.name %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
