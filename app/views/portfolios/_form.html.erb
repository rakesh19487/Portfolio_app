<%= form_with(model: @portfolio, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control", rows: 15 %>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      <%= f.file_field :thumb_image , class: "portfolio-file-field"%> Upload thumb image
    </label>
  </div>
  <div class="form-group">
    <label class="btn btn-primary">
      <%= f.file_field :main_image, class: "portfolio-file-field" %> Upload main image
    </label>
  </div>
  <h4>Technologies Used</h4>
  <%= f.fields_for :technologies do |t| %>
    <div class="form-group">
      <%= t.label :name %>
      <%= t.text_field :name, class: "form-control" %>
    </div>
  <% end%>
  <%= f.submit "Update", class: "btn btn-primary"  %>
<% end %>
