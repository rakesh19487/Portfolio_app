<%= form_with(model: @portfolio, local: true) do |f| %>
  <% if @portfolio.errors.any? %>
    <% @portfolio.errors.full_messages.each do |message| %>
      <%= alert_generator message %>
    <% end %>
  <% end %>
  <div class="form-group">
    <%= f.text_field :title, class: "form-control", placeholder: "Title" %>
  </div>
  <div class="form-group">
    <%= f.text_field :subtitle, class: "form-control", placeholder: "Subtitle" %>
  </div>
  <div class="form-group">
    <%= f.text_area :body, class: "form-control", rows: 15, placeholder: "Content" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-6">
        <label class="btn btn-primary">
          <%= f.file_field :thumb_image , class: "portfolio-file-field"%> Upload thumb image 
        </label>
      </div>
      <div class="col-6">
        <label class="btn btn-primary">
          <%= f.file_field :main_image, class: "portfolio-file-field" %> Upload main image
        </label>
      </div>
    </div>
  </div>
  <h4>Technologies Used</h4>
  <div class="form-group">
    <%= f.fields_for :technologies do |tech| %>
      <%= render "technology_fields", f: tech %>
    <% end%>
    <br>
    <%= link_to_add_association 'Add', f, :technologies, class: "btn btn-sm btn-primary" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary"  %>
<% end %>
