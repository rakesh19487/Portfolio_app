<h2>Portfolio Listing</h2>
<%= link_to "New ", new_portfolio_path %>

<% @portfolios.each do |portfolio| %>
        <h3><%= link_to portfolio.title, portfolio_path(portfolio) %></h3>
        <h4><%= portfolio.subtitle %></h4>
        <p><%= portfolio.body %></p>
        <%= image_tag (portfolio.thumb_image) if portfolio.thumb_image %>
        <%= link_to "Edit ", edit_portfolio_path(portfolio) %>
        <%= link_to "Show ", portfolio_path(portfolio) %>
        <%= link_to "Delete ", portfolio_path(portfolio), method: :delete, data: {confirm: "Are you sure ?"} %>
    <hr>
<% end %>